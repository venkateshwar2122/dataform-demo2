config {
  type: "table",
  schema: "analytics"
}

SELECT
  campaign_id,
  cast(date as date) as campaign_date,
  spend,
  'google' as source
from ${ref("google_ads")}

union all

select
  campaign_id,
  cast(date as date) as campaign_date,
  spend,
  'facebook' as source
from ${ref("facebook_ads")}
